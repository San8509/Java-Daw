import java.util.ArrayList;
import java.util.Scanner;

public class InvertirNumero {

	public static void main(String[] args) {
       Scanner sc = new Scanner(System.in);
	
       int n = sc.nextInt();
       int counter =0;
       int x = 0;
       int[] array = {};
       
       while(n !=0) {
    	   x = n % 10;
    	   n /= 10;
    	   for(int i=0; i<n; i++) {
    		   array[i] = i;
    	   }
    	   
    	   
    	   
    	   counter++;
    	   System.out.print(x+ ", ");
       }
       System.out.println("\n"+counter);
       
       
	}    
}
