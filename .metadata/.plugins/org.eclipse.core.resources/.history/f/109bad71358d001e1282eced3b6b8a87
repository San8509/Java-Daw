import java.time.LocalTime;
import java.time.temporal.ChronoUnit;
import java.util.Scanner;

public class ExamenRSV {

	/*
	 * Ramiro Santiago Velazquez
	 * 
	 * */
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int horas=0;
		int minutos=0;
		int segundos=0;
		
		
		// declaro la hora del comienzo
		System.out.println("A que hora empiezas a estudiar");
		LocalTime start = LocalTime.of(12, 30, 30);
        System.out.println(start);
        
        // declaro la hora del final
        System.out.println("A q hora terminas de estudiar");
        LocalTime end = LocalTime.of(16, 20, 10);
        System.out.println(end);
        
        // diferencia entre valores
        long horas = ChronoUnit.HOURS.between(start, end);
    	long minutos = ChronoUnit.MINUTES.between(start, end);
    	long segundos = ChronoUnit.SECONDS.between(start, end);
        
         // Muestro el resultado de la diferencia
    	System.out.println("Has estudiado programacion: "+horas+" horas :"+minutos+" minutos y "+segundos+" segundos"); 
    	
    	
    	
    	
        
	}

}
